<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.Moredetails"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="#5c72fc">


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/backk"
                android:id="@+id/lapi_prodet_back"/>

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_marginRight="10dp"
                android:textSize="22dp"
                android:textStyle="bold"
                android:text="Product Details"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="right">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:background="@drawable/mycart"
                android:id="@+id/ld_open_mycart"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/lapi_prodet_count"
                android:layout_marginLeft="5dp"
                android:textColor="#ffa9a9"
                android:layout_marginRight="10dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="0"/>

        </LinearLayout>

    </LinearLayout>


    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">


        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">


            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="@drawable/loadingg"
                    android:id="@+id/lapi_prodet_img"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/gridviewborders"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/lapi_prodet_title"
                    android:textColor="#5b5b5b"
                    android:textSize="16dp"
                    android:text="Dell i3 Processor Laptop"/>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:text="Rs. "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_price"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:text="45000"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#565656"
                        android:textSize="10dp"
                        android:text="Rs. "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_original_price"
                        android:textColor="#565656"
                        android:textSize="10dp"
                        android:text="50000"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_discount"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ff0000"
                        android:textSize="10dp" android:text="10"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:textColor="#ff0000"
                        android:textSize="10dp"
                        android:text="% Discount"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:background="@drawable/gridviewborders"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp" android:background="#f4f4f4">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Details : "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_details"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="____________________________"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="#f4f4f4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Laptop Specifications : "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_specifications"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="__________________________________"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="#f4f4f4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Color : "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_color"
                        android:textColor="#000000"
                        android:textSize="16dp" android:text="Brown"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="#f4f4f4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Warrenty Details : "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_warrenty_details"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="Medium"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="#f4f4f4"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Updated On : "/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_date1"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="12/12/12"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/lapi_prodet_time1"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:text="12:12:12"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_height="30dp"
                    android:layout_width="100dp"
                    android:background="@drawable/addtocart"
                    android:id="@+id/lapi_prodet_add_to_cart"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>